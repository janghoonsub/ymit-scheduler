<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/examplanerform"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView 
        android:id="@+id/plannersubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
	    android:textSize="20sp"
	    android:text="과목명" />
         <EditText
		android:id="@+id/editsubject"  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:hint="과목명"
	    />
    </TableRow>
    
    <TableRow>
        <TextView
        android:id="@+id/plannercover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="범위"
        android:textSize="20sp"
         />
        <EditText
		android:id="@+id/editcover"  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:hint="시험범위"
	    />
    </TableRow>
    
    <TableRow>
        <TextView
        android:id="@+id/plannerbefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="이전점수"
        android:textSize="20sp"
        />
        <EditText
		android:id="@+id/editbefore"  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:inputType="number"
	    android:hint="이전점수"
	    />
    </TableRow>
    
    <TableRow>
        <TextView
        android:id="@+id/plannergoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="목표"
        android:textSize="20sp"
        />
        <EditText
		android:id="@+id/editgoal"  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:inputType="number"
	    android:hint="목표점수"
	    />
    </TableRow>
	
</TableLayout>